// See https://nf-co.re/sarek/3.0.2/parameters for more about sarek parameters

params {
	
	// beartooth run settings
	cluster_account = "passerinagenome"
	email = "nminor1@uwyo.edu"
	date = new java.util.Date().format('yyyyMMdd')
	
	// I/O settings
	input = "resources/samplesheet.csv"
	results = "results_${params.date}"
	tracedir = "results_${params.date}/pipeline_info"
	
}

// added nextflow setting
cleanup = true

profiles {
	
	standard {
		
		// slurm settings
		process.executor = 'slurm'
		process.clusterOptions = "--account=" + "${params.cluster_account}" + " --mail-type=END" + " --mail-user=" + "${params.email}"
		process.cpus = 8
		// process.disk = 5.GB
		process.memory = 64.GB
		process.time = { 8.hours * task.attempt }
		process.errorStrategy = 'retry'
		process.maxRetries = 1
		
		// container settings
		singularity.enabled = true
		docker.enabled = false
		conda.enabled = false
		podman.enabled = false
		shifter.enabled = false
		charliecloud.enabled = false
		
	}
	
}
